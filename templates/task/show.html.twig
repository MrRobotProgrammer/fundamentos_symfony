{% extends "base.html.twig" %}

{% block title %}
    Lista de tarefas
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <h1>Detalhes da tarefa - ID {{ task.id }}</h1>
    </div>

    <div class="col-sm-12">

        <p>
            <strong>Titulo: </strong> {{ task.name }}<br>
            <strong>Descrição: </strong> {{ task.description }}<br>
            <strong>Data: </strong>
        </p>
        <a class="btn btn-secondary" href="{{ url('task_index') }}">Voltar</a>
    </div>
{% endblock %}
